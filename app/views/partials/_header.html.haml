            %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
          .navbar-collapse.collapse.clearfix
            %ul.navigation.clearfix
              %li
                = link_to root_path do
                  %i.fa.fa-home
                  Главная
              %li.dropdown
