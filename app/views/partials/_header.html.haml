%header.main-header
  / Main Header
  .header-upper
    .container
      .header-upper-bg.clearfix
        .main-logo.pull-left
          %figure
            = link_to root_path do
              = image_tag 'logo.png'
        .top-info.pull-right
          %ul
            %li.single-info-box
              .icon-holder
                %span.flaticon-phone-call
              .text-holder
                %p
                  = "+38 /057/ 706 00 38"
                  %br
                  = "+38 /099/ 924 32 43"
                  %br
                  = "+38 /050/ 992 43 40"
            %li.single-info-box
              .icon-holder
                %span.flaticon-envelope
              .text-holder
                = mail_to 'angloconnect.com@gmail.com' do
                  %p
                    %span EMAIL:
                    = succeed 'angloconnect.com@gmail.com' do
                      %br/
            %li.single-info-box
              .icon-holder
                %i.fa.fa-skype{aria: {hidden: true}}
              .text-holder
                = link_to 'skype:anglo.connect' do
                  %p
                    %span SKYPE:
                    = succeed 'anglo.connect' do
                      %br/
  .header-lower
    .container.menu-bg
      .row.menu-bar.clearfix
        %nav.main-menu
